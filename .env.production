# Production Environment Configuration
NODE_ENV=production

# Server
PORT=5001

# Database - MongoDB Atlas (Production Cluster)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://username:password@cluster-production.xxxxx.mongodb.net/voicelap?retryWrites=true&w=majority

# Frontend - Production Domain
FRONTEND_ORIGIN=https://voicelap.com

# Security - MUST USE STRONG SECRET (min 32 characters)
JWT_SECRET=your-very-strong-jwt-secret-for-production-min-32-chars-random

# Rate Limiting - Strict
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Google APIs
GOOGLE_API_KEY=your-google-translate-key

# HuggingFace (optional)
HUGGINGFACE_KEY=your-huggingface-api-key

# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Resend Email API
RESEND_API_KEY=your-resend-api-key

# Deepgram API (for speaker diarization)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Google Calendar API
GOOGLE_CALENDAR_EMAIL=your-email@gmail.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.voicelap.com/api/auth/google/callback
GOOGLE_ADMIN_ACCESS_TOKEN=your-access-token
GOOGLE_ADMIN_REFRESH_TOKEN=your-refresh-token

# Anonymous User Settings
ANON_TTL_HOURS=24

